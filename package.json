{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf .cache && rimraf coverage && rimraf dist && rimraf node_modules",
    "build": "rimraf dist && parcel build ./src/index.html --public-url ./",
    "format": "prettier --write \"src/**/*.{js,scss,html}\"",
    "lint": "npm-run-all --parallel lint:*",
    "lint:es": "eslint --fix \"src/scripts/*.js\"",
    "lint:scss": "stylelint --fix \"src/styles/**/*.scss\" --max-warnings 0",
    "start:dev": "parcel -p 3000 watch ./src/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marlexxa/Portfolio.git"
  },
  "keywords": [
    "portfolio",
    "frontend"
  ],
  "author": "Marlena Kruszewska",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marlexxa/Portfolio/issues"
  },
  "homepage": "https://github.com/marlexxa/Portfolio#readme",
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.5.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sass": "^1.32.8",
    "stylelint": "^13.11.0",
    "stylelint-config-hudochenkov": "^5.0.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "stylelint-selector-bem-pattern": "^2.1.0"
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "./src/static",
        "staticOutDir": "static"
      }
    ]
  },
  "dependencies": {}
}
